//////scroll to selected area//



//add below directive in js file bottom

myapp.directive('scrollOnClick', function() {
  return {
    restrict: 'A',
    link: function(scope, $elm) {
      $elm.on('click', function() {

         $("html, body").stop().animate({scrollTop: $elm.offset().top}, "slow");

      });
    }
  }
});

// add below as inline tag to <td> in feature.html file
<td scroll-on-click id="tabs" class="pos-relative"> <span class="status">{{feature.featureStatus}}</span>



